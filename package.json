{
  "name": "pokedex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm:docker:start\" \"npm:codegen:server\" \"npm:codegen:client\" \"npm:server\" \"npm:dev\"",
    "dev": "vite --open",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "node --watch --no-warnings --import @swc-node/register/esm-register ./server/src/index.ts",
    "server:debug": "node --watch --trace-warnings --import @swc-node/register/esm-register ./server/src/index.ts",
    "docker:start": "cd ../pokeapi && docker-compose up -d && cd ../pokedex",
    "docker:stop": "cd ../pokeapi && docker-compose down -d && cd ../pokedex",
    "docker:gql-console": "open http://localhost:8080",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "codegen:client": "graphql-codegen -w",
    "codegen:server": "graphql-codegen -w --config ./server/codegen.ts",
    "codegen:compile": "graphql-codegen"
  },
  "dependencies": {
    "@apollo/client": "^3.9.11",
    "@apollo/server": "^4.10.4",
    "@emotion/react": "^11.11.4",
    "graphql": "^16.8.1",
    "pokedex-promise-v2": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.5",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@parcel/watcher": "^2.4.1",
    "@swc-node/register": "^1.9.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
